{
  "name": "hi-play-match-game",
  "version": "1.0.0",
  "description": "嗨玩消消消 - 全新架构的三消休闲游戏",
  "main": "index.js",
  "scripts": {
    "dev": "cocos preview --mode=dev",
    "build": "cocos build",
    "build:web": "cocos build --platform=web-mobile",
    "build:wechat": "cocos build --platform=wechat-game",
    "build:android": "cocos build --platform=android",
    "build:ios": "cocos build --platform=ios",
    "preview": "cocos preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint assets/scripts --ext .ts",
    "lint:fix": "eslint assets/scripts --ext .ts --fix",
    "format": "prettier --write assets/scripts/**/*.ts",
    "type-check": "tsc --noEmit",
    "migrate-levels": "node tools/runMigration.js",
    "batch-process": "node tools/runBatchProcessor.js",
    "generate-docs": "typedoc assets/scripts",
    "analyze-bundle": "node tools/bundleAnalyzer.js"
  },
  "keywords": [
    "cocos-creator",
    "typescript",
    "match-3",
    "puzzle-game",
    "wechat-mini-game"
  ],
  "author": "Game Development Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.0.0",
    "prettier": "^2.8.0",
    "typescript": "^4.9.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/hi-play-match-game.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/hi-play-match-game/issues"
  },
  "homepage": "https://github.com/your-org/hi-play-match-game#readme",
